# History Depth (SPECM, Opt. K14)

record(ai, "$(P)$(R)SpecBuffSize-RB") {
  field(DESC, "Get the buffer size")
  field(DTYP, "stream")
  field(INP, "@rsfsl.proto inSpecBuffSize $(PORT)")
}

record(ao, "$(P)$(R)SpecBuffSize-SP") {
  field(DESC, "Set the buffer size")
